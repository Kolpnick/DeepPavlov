{
  "dataset_reader": {
    "class_name": "huggingface_dataset_reader",
    "path": "{COMPETITION}",
    "name": "{TASK}",
    "train": "train",
    "valid": "validation",
    "test": "test"
  },
  "dataset_iterator": {
    "class_name": "huggingface_dataset_iterator",
    "features": ["sentence1", "sentence2", "start1", "start2", "end1", "end2"],
    "label": "label",
    "seed": 42
  },
  "chainer": {
    "in": ["sentence1", "sentence2", "start1", "start2", "end1", "end2"],
    "in_y": ["label"],
    "pipe": [
      {
        "class_name": "torch_transformers_entity_spans_preprocessor",
        "vocab_file": "{BASE_MODEL}",
        "do_lower_case": false,
        "max_seq_length": 512,
        "in": ["sentence1", "start1", "end1", "sentence2", "start2", "end2"],
        "out": ["input_ids", "attention_mask", "entity_subw_indices"]
      },
      {
        "id": "tag_vocab",
        "class_name": "simple_vocab",
        "fit_on": ["label"],
        "unk_token": ["O"],
        "pad_with_zeros": true,
        "save_path": "{MODEL_PATH}/tag.dict",
        "load_path": "{MODEL_PATH}/tag.dict",
        "in": ["label"],
        "out": ["y_ids"]
      },
      {
        "class_name": "torch_transformers_bilinear_classification",
        "return_probas": false,
        "pretrained_bert": "{BASE_MODEL}",
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "n_tags": "#tag_vocab.len",
        "learning_rate_drop_patience": 6,
        "learning_rate_drop_div": 1.5,
        "in": ["input_ids", "attention_mask", "entity_subw_indices"],
        "in_y": ["y_ids"],
        "out": ["y_pred_ids"]
      },
      {
        "in": ["y_pred_ids"],
        "out": ["y_pred_labels"],
        "ref": "tag_vocab"
      }
    ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "batch_size": 10,
    "metrics": ["f1_macro", "accuracy"],
    "epochs": 50,
    "validation_patience": 30,
    "val_every_n_batches": 200,
    "log_every_n_batches": 50,
    "show_examples": false,
    "evaluation_targets": ["valid", "train"],
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "BASE_MODEL": "bert-base-cased",
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "COMPETITION": "super_glue",
      "TASK": "wic",
      "MODEL_PATH": "{MODELS_PATH}/{COMPETITION}/{TASK}/{BASE_MODEL}"
    }
  }
}
